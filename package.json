	},
	"bin": "cli.js",
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"test": "nyc ava -v -s",
		"prepublish": "npm run build",
		"build": "microbundle",
		"precommit": "lint-staged",
		"npmUp": "npm version patch && npm publish",
		"git": "git push && git push --tags",
		"pub": "npm run test && npm run npmUp && npm run git"
	},
	"lint-staged": {
		"*.{js,json,css,md}": [
			"prettier --single-quote --trailing-comma es5 --write",
			"git add"
		]
	},
	"size-limit": [
		{
			"path": "dist/two-log.js",
			"webpack": false,
			"gzip": false
		}
	],
	"files": [
		"cli.js"
	],
	"keywords": [
		"cli-app",
		"cli",
		"log",
		"ora",
		"winston"
	],
	"dependencies": {
		"get-module-name": "0.0.1",
		"meow": "^3.7.0",
		"ora": "^2.1.0",
		"winston": "^2.4.2"
	},
	"devDependencies": {
		"ava": "^0.20.0",
		"codecov": "^3.0.2",
		"lint-staged": "^7.0.0",
		"microbundle": "^0.4.4",
		"nyc": "^11.8.0",
		"prettier": "^1.12.1"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
